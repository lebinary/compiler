class Calculator(int option;) {
    void Calculator(int op) {
        {
            option = op;
        }
    }

    int calc(){
        {
            if ((option=1)) {
                return (3+4);
            } else {
                return (4-3);
            }
            return (1000);
        }
    }
}
  
class Main() {
    int main() {
        Calculator c;
        {
            c = new Calculator (1);
            return c.calc();
        }
    }
}